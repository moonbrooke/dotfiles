#!/usr/bin/env bash

# Define your palette
colors=(
"#f7768e"
"#ff9e64"
"#e0af68"
"#cfc9c2"
"#9ece6a"
"#73daca"
"#b4f9f8"
"#2ac3de"
"#7dcfff"
"#7aa2f7"
"#bb9af7"
"#c0caf5"
"#a9b1d6"
"#9aa5ce"
"#565f89"
"#414868"
"#24283b"
"#1a1b26"
)

# Function to convert hex to RGB
hex_to_rgb() {
    local hex=${1#"#"}
    local r=$((16#${hex:0:2}))
    local g=$((16#${hex:2:2}))
    local b=$((16#${hex:4:2}))
    echo "$r;$g;$b"
}

# Print each color with preview on the left and hex on the right
for hex in "${colors[@]}"; do
    rgb=$(hex_to_rgb "$hex")
    # Color block (6 spaces wide) followed by hex code
    printf "\e[48;2;%sm      \e[0m %s\n" "$rgb" "$hex"
done
